# Configuração Básica da Aplicação
APP_NAME=MeuAppWhatsApp
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Banco de Dados
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=meu_app_db
DB_USERNAME=root
DB_PASSWORD=

# Configurações das APIs Meta
# Obtenha META_APP_ID e META_APP_SECRET em developers.facebook.com
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
# Crie um token único e secreto para verificação de webhooks
META_VERIFY_TOKEN=your_unique_verify_token
# Versão da API Graph da Meta (verifique a mais atual)
META_VERSION=v17.0
# URL do webhook (use ngrok para desenvolvimento)
META_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhooks/meta

# Logs e Cache
LOG_CHANNEL=stack
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
